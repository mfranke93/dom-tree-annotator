{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["es6", "es2018", "dom"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true
